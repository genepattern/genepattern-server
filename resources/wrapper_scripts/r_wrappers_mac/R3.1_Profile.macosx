local({
   # Appropriate for platforms with binary packages (OS X), if install from source is not desired. Don't use for Linux.
   options(install.packages.check.source = "no")

   # Set repositories as desired.  Here, we are using the R Studio cloud mirror for CRAN and the default Bioconductor site.
   # Note that these BioC settings are specific to the version of R: 
   #   see http://bioconductor.org/about/release-announcements/#release-versions
   options("repos" = c(CRAN="http://cran.rstudio.com",
                       BioCsoft="http://bioconductor.org/packages/3.0/bioc",
                       BioCann="http://bioconductor.org/packages/3.0/data/annotation",
                       BioCexp="http://bioconductor.org/packages/3.0/data/experiment",
                       BioCextra="http://bioconductor.org/packages/3.0/extra"),
           "BioC_mirror" = "http://bioconductor.org"
   )
})
